package org.elusive.sound.tempo;

public class Tempo {

	private int intervalleFrames;
	private double bpm;
	private double frequence;
	
	public Tempo(double bpm){
		setBpm(bpm);
	}
	
	public double getBPM(){
		return 0;
	}
	
	public void setIntervalleFrames(int intervalleFrames){
		this.intervalleFrames = intervalleFrames;
		this.frequence = 44100d / intervalleFrames;
		this.bpm = frequence * 60;
	}
	
	public int getIntervalleFrames(){
		return intervalleFrames;
	}

	public void setBpm(double bpm) {
		setIntervalleFrames( (int) (60 / bpm * 44100d) );
	}
	
	public double getBpm() {
		return bpm;
	}

	public void setFrequence(double frequence) {
		setIntervalleFrames( (int) (1 / frequence * 44100d) );
	}

	public double getFrequence() {
		return frequence;
	}
	
	
	public static int frequenceToPeriode(double f){
		return (int) (44100 / f);
	}

	

	public String toString(){
		return "Tempo["+intervalleFrames+" -- bpm = "+bpm+"]";
	}

	
	
}
